<Window x:Class="WpfApp.Rpg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Rpg"
        mc:Ignorable="d"
        Title="SwordDamage" Height="175" Width="300">
    <Grid x:Name="SwordDamage">
        <CheckBox x:Name="CbIsFlaming" Content="Flaming" HorizontalAlignment="Left" Margin="40,48,0,0" VerticalAlignment="Top" Checked="IsFlaming_Checked" Unchecked="IsFlaming_Unchecked"/>
        <CheckBox x:Name="CbIsMagic" Content="Magic" HorizontalAlignment="Left" Margin="216,48,0,0" VerticalAlignment="Top" Checked="IsMagic_Checked" Unchecked="IsMagic_Unchecked"/>
        <Button x:Name="btnRollDamage" Content="Roll the damage" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Width="204" Height="42"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,127,0,0" Text="Damage" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Window>
